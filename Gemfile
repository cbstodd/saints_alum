source 'https://rubygems.org'

gem 'rails', '3.2.16'
gem 'bootstrap-sass'
gem 'bcrypt-ruby', '3.0.1'


group :development, :test do
  gem 'sqlite3' 
  gem 'rspec-rails' 
end

group :development do 
  gem 'annotate'
  gem 'pry-rails'
  gem 'pry-theme'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier' 
end

gem 'jquery-rails'

group :test do
  gem 'capybara'
  gem 'factory_girl_rails'
end

group :production do
  gem 'pg'
end
