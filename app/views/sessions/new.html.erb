<% provide(:title, "Sign in") %>

<h1>Sign in</h1>

<h2>Sign in to post messages</h2>

<div class="form">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-7 col-md-7">
        <%= form_for(:session, url: sessions_path) do |f| %>
          
          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <div id="button">
            <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
          </div>

          <% end %>
          <p>New user? <%= link_to "Sign up", signup_path, id: "dark-link" %></p>
      </div>
    </div>
  </div>
</div>
