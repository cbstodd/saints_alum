<li class="jumbotron">
  <span class="title"><%= micropost.title %></span>
  <span class="content">
    <%= micropost.content.html_safe %><br />
    <% if micropost.image? %>
    <div class="image">
      <%= image_tag micropost.image_url(:thumb).to_s %>
    </div>
    <% else %>
      <p></p>
    <% end %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago
  </span>
  <% if current_user?(micropost.user) %>
    <small><%= link_to "delete", micropost, method: :delete,
                                     data: { confirm: "Are you sure?" },
                                     title: micropost.content, id: "dark-link" %></small>
  <% end %>
</li>