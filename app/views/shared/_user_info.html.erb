<a href="<%= user_path(current_user) %>">
  <%= gravatar_for current_user, "" %>
</a>

<h1><%= current_user.name %></h1>

<%= current_user.year %>


<span>
  <%= link_to "view my profile", current_user, class: "gravatar-micro" %>
</span>
<span>
  <%= pluralize(current_user.microposts.count, "posts") %>
</span>