<%= form_for(@micropost, html: {multipart: true})  do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="form-horizontal" id="micro-input" role="form">
    <%= f.text_area :title, placeholder: "Title", class: "form-control", rows: "1" %>      
    <%= f.text_area :content, placeholder: "Compose new post...", class: "form-control", rows: "5" %>
  </div>
  <p>
    <%= f.file_field :image, class: "form-control" %>

    <%= f.label :remote_image_url, "or image URL" %><br />
    <%= f.text_field :remote_image_url, class: "form-control", rows: "1"  %>
  </p>
  <div id="button">
   <%= f.submit "Post", class: "btn btn-large btn-primary" %>
  </div>

<% end %>