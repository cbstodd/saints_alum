<% if signed_in? %>

  <div class="row">
    <aside class="col-xs-6 col-md-4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
       </section>
      <section>
        <%= render 'shared/micropost_form' %>
       </section>
    </aside>
    <div class="col-xs-12 col-md-8">
      <section class="feed">
          <h3>User Feed</h3>
          <%= render 'shared/feed' %>
      </section>
    </div>
  </div>

  <% else %>

  <div class="center jumbotron">
    <%= link_to image_tag("smaGrey.png"), alt: "SaintsAlum.com" %>
    <h2>Welcome to the St. Mary's Alumni Social Network</h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-default" %>
  </div>

  <% end %>
